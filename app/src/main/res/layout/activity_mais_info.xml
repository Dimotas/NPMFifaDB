<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base__15"
    tools:context=".MaisInfo">

    <Button
        android:id="@+id/bt_inserir"
        android:layout_width="377dp"
        android:layout_height="74dp"
        android:layout_marginBottom="136dp"
        android:backgroundTint="@color/amrelo"
        android:text="Inserir"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/melhor_pe"
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:layout_marginBottom="28dp"
        android:background="@color/white"
        android:backgroundTint="@color/amrelo"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bt_inserir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/altura"
        android:layout_width="141dp"
        android:layout_height="67dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/amrelo"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Altura"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/Peso"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nacionalidade" />

    <EditText
        android:id="@+id/Peso"
        android:layout_width="141dp"
        android:layout_height="67dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="@color/amrelo"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Peso"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nacionalidade" />

    <EditText
        android:id="@+id/clube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:backgroundTint="@color/amrelo"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Clube"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nacionalidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/amrelo"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Nacionalidade"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clube" />
</androidx.constraintlayout.widget.ConstraintLayout>